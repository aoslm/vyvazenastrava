<% provide(:title, 'Užívatelia') %>

<h1>Zoznam používateľov</h1>

<table class="table">
  <tr>
    <th>Nick</th>
    <th>Meno</th>
    <th>Priezvisko</th>
    <th>Adresa</th>
    <th>Hodnotenie</th>
    <th>Narodený</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.name %></td>
        <td><%= user.surname %></td>
        <td><%= user.address %></td>
        <td><%= user.rank %></td>
        <td><%= l user.dateOfBirth, :format => :default %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Zmeň', edit_user_path(user) %></td>
        <td><%= link_to 'Vymaž', user, method: :delete %></td>
      </tr>
  <% end %>
</table>
